    </div>
  </div>
</SpectrumLayout>

<script>
  // Navegación con ESC/Backspace para volver al menú
  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape' || event.key === 'Backspace') {
      event.preventDefault();
      window.location.href = '/';
    }
  });
</script>

<style>
  .spectrum-test-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    overflow: hidden;
    z-index: 1;
  }

  /* Franjas de colores verticales */
  .color-bar {
    flex: 1;
    height: 100%;
  }

  .gray { background: #a7b1ca; }
  .white { background: #ffffff; }
  .gold { background: #baad3d; }
  .yellow { background: #ffff00; }
  .blue { background: #00defa; }
  .cyan { background: #00ffff; }
  .green { background: #00cd6f; }
  .green-light { background: #08f989; }
  .magenta { background: #ca56ff; }
  .pink { background: #ff7fff; }
  .red-bordeaux { background: #d5003b; }
  .red { background: #fb212f; }
  .blue-dark { background: #013dff; }
  .blue-sky { background: #0088fd; }
  .black { background: #000000; }
  .black-2 { background: #1a1a1a; }

  /* Texto repetido superpuesto */
  .repeating-text {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    pointer-events: none;
  }

  .text-row {
    font-family: 'ZX-Spectrum Tight', 'ZX-Spectrum', 'Courier New', Courier, monospace;
    font-size: 1.58em;
    font-weight: bold;
    line-height: 0.6;
    margin: 0;
    padding: 0;
    white-space: nowrap;
    overflow: hidden;
    text-shadow: 1px 1px 0px rgba(255, 255, 255, 0.5);
  }

  /* Colores específicos para cada línea (posiciones impares) */
  .gray-text { color: #a7b1ca; }
  .gold-text { color: #baad3d; }
  .blue-text { color: #00defa; }
  .green-text { color: #00cd6f; }
  .magenta-text { color: #ca56ff; }
  .red-bordeaux-text { color: #d5003b; }
  .blue-dark-text { color: #013dff; }
  .black-text { color: #000000; }
</style>
