---
import SpectrumMenu from '../components/SpectrumMenu.astro';
import '../styles/spectrum.css';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Web personal de Osukaru - Diseño retro inspirado en el Sinclair Spectrum ZX 128K +2A" />
    <title>Osukaru - El lado Spectrum</title>
  </head>
  <body>
    <div class="viewport-wrapper">
      <div class="spectrum-viewport">
        <div class="viewport-content">
          <SpectrumMenu />
        </div>
        <div class="spectrum-footer">
          <div>©1980. Óscar López Carazo</div>
          <div>↑↓ para desplazar y ENTER para seleccionar</div>
        </div>
      </div>
    </div>
  </body>
</html>
