---
import '../styles/spectrum.css';

export interface Props {
  title: string;
  description?: string;
  showFooter?: boolean;
  pageTitle?: string;
}

const { title, description = "Web personal de Osukaru - Diseño retro inspirado en el Sinclair Spectrum ZX 128K +2A", showFooter = false, pageTitle } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Alternativas para otros formatos: -->
    <!-- <link rel="icon" type="image/x-icon" href="/favicon.ico" /> -->
    <!-- <link rel="icon" type="image/png" href="/favicon.png" /> -->
    <!-- <link rel="apple-touch-icon" href="/apple-touch-icon.png" /> -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <div class="viewport-wrapper">
      <div class="spectrum-viewport">
        <div class="viewport-content">
          <slot />
        </div>
        {showFooter && (
          <div class="spectrum-footer">
            <div>©1980. Óscar López Carazo</div>
          </div>
        )}
        {!showFooter && pageTitle && (
          <div class="spectrum-page-title">
            <div class="page-title-text">{pageTitle}</div>
            <div class="spectrum-color-bar"></div>
          </div>
        )}
      </div>
    </div>
  </body>
</html>
